{
    "version": 2,
    "builds": [
      { "src": "index.js",    "use": "@vercel/node" },
      { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1.js" },
      { "src": "/(.*)",     "dest": "/"       }
    ],
    "crons": [
      {
        "path":        "/api/cron",
        "schedule":    "0 4 * * *"
      },
      {
        "path":        "/api/cron",
        "schedule":    "30 18 * * *"
      }
    ]
  }
  